        "apostrophe_comment": {
            "captures": {
                "1": {
                    "name": "punctuation.definition.comment.bs"
                }
            },
            "match": "(').*$\\n?",
            "name": "comment.line.apostrophe.bs"
        },
        "keyword_return": {
            "comment": "The return statements in functions",
            "captures": {
                "1": {
                    "name": "keyword.control.flow.return.bs"
                }
            },
            "match": "(?i:\\b(return)\\b)"
        },
        "literal_invalid": {
            "captures": {
